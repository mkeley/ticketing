<div class="col-sm-6 col-sm-offset-3" stye="text-align: center">
<h2>Log In</h2>
<form {{action "authenticate" on="submit"}}>
  <label for="identification">Email</label>
  {{input value=identification placeholder="Enter Login" class="form-control"}}

  <label for="password">Password</label>
  {{input value=password type="password" placeholder="Enter Password" class="form-control my-form"}}
  <br>
  <button type="submit" class="btn btn-default">Login</button>
</form>

{{#if errorMessage}}
  {{errorMessage}}
{{/if}}

</div>
